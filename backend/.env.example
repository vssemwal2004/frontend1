# ==============================================
# BACKEND ENVIRONMENT VARIABLES (for Render)
# Copy these to Render Dashboard → Environment
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=5001

# MongoDB Configuration (MongoDB Atlas)
# Get this from: https://cloud.mongodb.com → Connect → Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/busdb?retryWrites=true&w=majority

# JWT Configuration (for user authentication)
# Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRE=30d

# Hackwow Integration (Unified Booking Service)
USE_HACKWOW=true
HACKWOW_API_URL=https://your-aws-hackwow-url.com
HACKWOW_APP_ID=APP-1457f61c-772f-4ecf-824e-ba5918c83a3d
HACKWOW_API_KEY=your_hackwow_api_key_here

# Razorpay Payment Gateway
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_RU9FdAlzUTbysa
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Frontend URL (will be set after frontend deployment)
# Example: https://bus-booking-frontend.onrender.com
FRONTEND_URL=https://your-frontend-url.onrender.com

# Admin Credentials (for first-time setup)
ADMIN_EMAIL=admin@busapp.com
ADMIN_PASSWORD=Admin@123456

# Email Configuration (Optional - for booking confirmations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
